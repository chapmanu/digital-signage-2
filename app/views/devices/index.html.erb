<div class="admin-content">
  <%= home_button %>
  <h1 class="admin-page-title"><%= image_tag 'screen.png', alt: 'Devices' %> Devices</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th style="text-align: center">Number of Slides</th>
        <th style="text-align: center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @devices.each do |device| %>
        <tr>
          <td><%= link_to device.name.try(:humanize), device %></td>
          <td><%= device.location %></td>
          <td style="text-align: center"><%= device.slides.length %></td>
          <td style="text-align: center">
            <%= link_to "Edit", edit_device_path(device) %> |
            <%= link_to "Delete", device, method: 'delete', data: {confirm: 'Are you sure you want to delete this thing?'} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

