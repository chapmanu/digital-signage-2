<%= home_button %>
<header class="admin-page-header">
  <h1 class="admin-page-title">Your Digital Signs</h1>
  <%= link_to "+ New Sign", new_device_path, id: 'new-device-link' %>
</header>

<% if @devices.empty? %>
  <p>Looks like you haven't created any digital signs yet.  <%= link_to "+ Create one.", new_device_path %></p>
<% else %>

<%= search_form devices_path %>

<table>
  <thead>
    <tr>
      <th style="width: 80px;"></th>
      <th style="width: 30%">Name</th>
      <th>Location</th>
      <th>Type</th>
      <th style="text-align: center;">Number of Slides</th>
      <th style="text-align: center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td style="text-align: center;"><%= content_tag :div, nil, class: (device.active? ? 'device-active' : 'device-inactive') %></td>
        <td><%= link_to device.name, device %></td>
        <td><%= device.location %></td>
        <td><%= device.menu.try(:humanize) %>
        <td style="text-align: center"><%= device.slides.length %></td>
        <td style="text-align: center">
          <%= link_to "Play", play_device_path(device) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>