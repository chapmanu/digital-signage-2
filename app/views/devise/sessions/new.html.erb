<div class="admin-content">
  <div class="sign-in-heading">
    <%= inline_svg 'cu_window.svg' %><h1>Digital <strong>Signage</strong></h1>
  </div>

  <div class="sign-in-form">
    <% if Rails.env.development? %>

      <p>
        Development allows you to easily switch users using
        <a href="https://github.com/flyerhzm/switch_user" target="_blank">switch_user</a>.
      </p>
      <%= switch_user_select %>

    <% else %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-field">
          <%= f.text_field :email, autofocus: true %>
          <%= f.label :email, "Chapman Username" %>
        </div>

        <div class="input-field">
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.label :password %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <p class="remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </p>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: 'btn' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    <% end %>
  </div>
</div>