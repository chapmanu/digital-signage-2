<div class="notifications-container">

  <div class="notifications-listing">
    <h4>Notifications</h4>
    <% @unapproved_sign_slides.each do |ss| %>
      <div id="unapproved-sign-slide-<%= ss.id %>" class="unapproved-sign-slide">
        <p><%=link_to ss.slide.menu_name, ss.slide %> needs to be approved to go on <%= link_to ss.sign.name, ss.sign %></p>
        <p>
          <%= link_to 'Approve', approve_sign_slide_path(ss), remote: true, method: :post %>
          <a href="#">Reject</a>
        </p>
      </div>
    <% end %>
  </div>

  <div class="activities-listing">
    <h4>Recent Activity</h4>
    <%= render_activities(@activites, layout: 'activity') %>
  </div>

</div>