<div class="search-filters-container">
  <div class="search input-field">
    <input id="search" type="text">
    <label for="search">Search</label>
  </div>
  <div class="filter">
    <label>Filter:</label>
    <div class="pill-buttons" id="filters">
      <%= search_filter(:filter, 'All', 'all', default: true) %><%= search_filter(:filter, 'Mine', 'mine') %>
    </div>
  </div>
  <div class="new">
    <%= link_to "New", new_sign_path, class: 'btn green' %>
  </div>
</div>

<div id="signs-listing">
  <%= render @signs %>
</div>
