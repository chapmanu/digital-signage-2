{#
 # Attaches AJAX call to poll server in background for updates.
 # See assets/javascripts/application/models/device.js: Device._startPolling
 #}
<div class="js-device-meta"
     data-id="<%= @sign.id %>"
     data-poll-device-path="<%= poll_sign_path @sign %>"
     data-alerts-feed-url="<%= @sign.campus_alert_feed %>"
     data-edit-url="<%= edit_sign_path @sign %>"
     data-transition="<%= @sign.transition %>"
     data-updated-at="<%= @sign.updated_at %>"></div>

<div id="ui-feed" class="ui-feed ui-feed--show-mouse">

  <%= render "signs/menus/#{@sign.menu}" %>

  <main class="owl-carousel" role="main" >
    <%= render(@sign.playable_slides) %>
  </main>
</div>

<%= render 'emergency' if @sign.any_emergency? %>