<div class="search-filters-container">

  <div class="search input-field">
    <input id="search" type="text">
    <label for="search">Search</label>
  </div>

  <div class="filter">
    <label>Filter:</label>
    <div class="pill-buttons" id="filters">
      <%= filter_pill_link('All', 'all', default: true) %><%= filter_pill_link('Mine', 'mine') %>
    </div>
  </div>

  <div class="sort">
    <label>Sort:</label>
    <div class="pill-buttons" id="sort">
      <%= filter_pill_link('Newest', 'newest', default: true) %><%= filter_pill_link('Popular', 'popular') %><%= filter_pill_link('A-Z', 'alpha') %>
    </div>
  </div>

  <div class="new">
    <%= link_to "New", new_slide_path, class: 'btn green' %>
  </div>
</div>

<div class="slide-listing-container" id="slides-listing">
  <%= render partial: 'admin_slide', collection: @slides %>
</div>
<%= paginate @slides %>